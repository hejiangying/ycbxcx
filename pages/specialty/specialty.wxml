<!--pages/anotherdetail/anotherdetail.wxml-->
<view class="container">
  <view class="top">
    <swiper indicator-dots="true" autoplay="true" interval="3000" circular="true" indicator-active-color="#f63264" style="width:100%;">
      <block wx:for="{{orderdetail.imgList}}" wx:key="{{index}}">
        <swiper-item style="width:100%;">
          <image src="{{'http://192.168.190.243:8081'+item}}" style="width:100%;height:100%;"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="con">
    <view class="title">{{orderdetail.goodsName}}</view>
    <view class="price"><text>￥{{orderdetail.marketPrice}}</text></view>
    <view>购买数量：{{orderdetail.goodsNumber}}</view>
    <view>总价：{{orderdetail.totalFee}}</view>
    <view>消费日期：{{orderdetail.createTime}}</view>
    <view>订单号：{{ordersn}}</view>
    <view class="info"><text>收货地址：</text></view>
    <view> {{orderdetail.itemDesc}}</view>
  </view>
</view>
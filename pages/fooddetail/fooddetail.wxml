<!--pages/orderdetail/orderdetail.wxml-->
<view class="container">
<block>
  <view class="tourdetail">
    <swiper indicator-dots="true" autoplay="true" interval="3000" circular="true" indicator-active-color="#f63264">
      <block wx:for="{{goods.imgList}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{'http://192.168.190.243:8081'+ item}}" width="100%" height="150" />
        </swiper-item>
      </block>
    </swiper>
    <view class="t-name cen">
      <text>{{goods.goodsName}}</text>
    </view>
    <view class="sell-state cen">
      <view class="t-money">
        <text class="t-symbol">￥</text>
        <text class="t-much">{{goods.marketPrice}}</text>
        <text class="t-min">起</text>
        <!-- <text>可订明日</text> -->
      </view>
      <text class="sold">已售：91</text>
    </view>
    <view class="advantages cen">
      <!-- <view>
        <image src="../../image/ok.png"></image> 正品保障</view>
      <view>
        <image src="../../image/ok.png"></image>极速发货</view>
      <view>
        <image src="../../image/ok.png"></image>7天退换货</view> -->
      <view>
      </view>
    </view>
    <view class="kong"></view>
    <view class="comments" wx:if="{{commentlist != ''}}">
      <view class="score cen">
        <view class="satisfaction">
          <text>查看评论 </text>
        </view>
        <view class="com-num" bindtap='commSee' data-item="{{commentlist[0].id}}">{{commentlist.length}}条评论 ></view>
      </view>
    </view>
    <view class="kong"></view>
    <!-- tab -->
    <view class="tab">
      <view class="tab-top">
        <text data-xc="1" bindtap='xcSelect' class="{{xc==1 ? 'xcon': ''}}">商品详情</text>
        <!-- <text data-xc="2" bindtap='xcSelect' class="{{xc==2 ? 'xcon': ''}}">费用说明</text>
      <text data-xc="3" bindtap='xcSelect' class="{{xc==3 ? 'xcon': ''}}">使用说明</text> -->
      </view>
      <view class="tab-con">
        <view class="tab1" wx:if="{{xc==1}}">
         {{goods.goodsDesc}}
        </view>
      </view>
    </view>
  </view>
  <!-- 底部悬浮按钮 -->
  <view class="footbtn">
    <view class="scbtn" bindtap="isCollect" data-id='{{goods.id}}'>
      <image src="{{collectstatus==  1 ? '../../image/collect.png' : '../../image/nocollect.png'}}"></image>
      <text>{{collectstatus ==  1 ? '收藏成功' : '点击收藏'}}</text>
    </view>
    <view class="buybtn" bindtap="buyClick" hover-class='clickcss'>{{status == true ? '加入购物车' : '选择商品'}}</view>
  </view>
  <view class="mask" wx:if="{{status}}">
    <view class="mask-cover"></view>
    <view class="mask-con">
      <view class="img-con">
        <view class="img-left">
          <image src="{{'http://192.168.190.243:8081'+ goods.imgList[0]}}"></image>
          <view class="kc">
            <text class="price">￥{{(goods.marketPrice*100)*num/100}}</text>
            <text class="num">库存{{goods.goodsNumber}}件</text>
          </view>
        </view>
        <text class="close" bindtap="closeClick">×</text>
      </view>
      <!-- <view class="type-con">
        <view>类型</view>
        <text data-id="1" bindtap="typeClick" class="{{_type == 1 ? 'on' : ''}}">百花蜜+精美礼品</text>
        <text data-id="2" bindtap="typeClick" class="{{_type == 2 ? 'on' : ''}}">红花蜜+精美礼品</text>
        <text data-id="3" bindtap="typeClick" class="{{_type == 3 ? 'on' : ''}}">百花蜜+精美礼品</text>
        <text data-id="4" bindtap="typeClick" class="{{_type == 4 ? 'on' : ''}}">红花蜜+精美礼品</text>
      </view> -->
      <view class="num-con">
        <text>数量</text>
        <view class="numsel">
          <view class="numdes" class="{{minusStatus}}" bindtap="bindMinus">-</view>
          <input type="number" bindchange="bindManual" value="{{num}}"></input>
          <view class="normal" bindtap="bindPlus">+</view>
        </view>
      </view>
    </view>
  </view>
</block>
</view>
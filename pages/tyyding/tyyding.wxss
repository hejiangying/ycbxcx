/* pages/booking/booking.wxss */

.time {
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  color: #666;
}

.time text {
  width: 160rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666
}

.time picker {
  width: 80%;
  color: #666;
  font-size: 26rpx
}

.selnum {
  background-color:#f7f7fa;
  width: 100%;
  display: block;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666
}
.form-item{
  border-radius: 20rpx;
  background-color: #fff;
  align-items: center
}
.form-item>view {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 20rpx;
  border-bottom: 1rpx solid#f7f7fa;
  align-items: center
}

.form-item>view text {
  width: 160rpx;
  font-size: 26rpx;
  color: #666
}

.form-item>view input {
  font-size: 28rpx;
}
.form-item button{
  display: block;
  text-align: right;
  background-color:#fff;
  outline: none;
}
.form-item button{
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  font-size: 26rpx;
  color: #f63264;
}

.form-item button::after{
  border: none;
  border-radius: 0;
}

.normal {
  color: #666;
}

.disabled {
  color: #ccc;
}
.allmoney{
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  background-color:#fff;
  width: 100%;
  z-index: 999
}
.allmoney .num{
  width: 70%;
  display: flex;
  flex-direction: column;
  float: left;
}
.allmoney .num text:nth-child(1){
  font-size: 28rpx;
  color: #999;
}
.allmoney .num text:nth-child(2){
  color: #f63264;
  font-size: 28rpx;
}
.allmoney .gopay{
  display: inline-block;
  background-color:#f63264;
  padding: 20rpx 50rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #fff;
  margin-top: 5rpx;
}
.dec{
  font-size: 28rpx;
  color: #666;
  text-indent: 56rpx;
  box-sizing: border-box;
  padding: 20rpx;
  line-height: 46rpx;
}
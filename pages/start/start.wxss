/* pages/myinfo/myinfo.wxss */

.mine-item {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  color: rgb(78, 77, 77);
  align-items: center;
}

.mine-item>text {
  width: 26%;
  text-align: center;
}

.mine-item .mine-r image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
}

.mine-item .mine-r {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 70%;
  margin: 0 auto;
}

.mine-item .mine-r input {
  width: 90%;
  background-color: rgb(235, 226, 226);
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
}

.mine-item .mine-r picker {
  width: 430rpx;
  background-color: rgb(235, 226, 226);
  padding: 30rpx;
  border-radius: 50rpx;
  font-size: 25rpx;
}

.mine-r .myzp image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  border-radius: 50%;
}
.mine-p image.tx{
  border-radius: 50%;
  background-color: rgb(240, 234, 234);
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  margin: 30rpx auto;
  display: block;
}
.sub{
  width: 80%;
  margin: 0 auto;
  padding: 20rpx 30rpx;
  background-color:#f63264;
  border-radius: 50rpx;
  color:#fff;
  text-align: center;
  margin-top: 50rpx;
}

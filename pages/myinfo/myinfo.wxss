.mine-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(238, 233, 233);
  padding:24rpx 30rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  color: rgb(78, 77, 77);
  align-items: center;
}
.mine-item .mine-r image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
}
.mine-item .mine-r {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.mine-item .mine-r picker{
  width: 200rpx;
}
.mine-item .mine-r picker view{
  font-size:25rpx;
}
.mine-r .myzp image{
  width: 80rpx;
  height: 80rpx;
  display: block;
  border-radius: 50%;
}
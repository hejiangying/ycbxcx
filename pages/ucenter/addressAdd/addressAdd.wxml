<!--pages/ucenter/addressAdd/addressAdd.wxml-->

<view class="add-address">
  <view class="add-form">
    <input placeholder='姓名' value="{{consignee}}" bindinput='nameInput'></input>
    <input placeholder='电话' value="{{mobile}}" bindinput='phoneInput' type="number" maxlength='11'></input>
    <view class="mine-item">
      <text>现居城市</text>
      <view class="mine-r">
        <picker mode="region" bindchange="bindRegionChange">
          <input value="{{addressName}}" class="picker"/>
        </picker>
        <image src="../../../image/arrow.png"></image>
      </view>
    </view>
    <input placeholder='详细地址' value="{{address}}" bindinput='addressInput'></input>
  </view>

  <view class="zan-panel">
    <view class="zan-cell zan-cell-switch">
      <view class="zan-cell__bd">设为默认地址</view>
      <view class="zan-cell__ft">
        <view class="zan-switch zan-switch--{{ checked ? 'off' : 'on' }} {{ disabled ? 'zan-swtich--disabled' : '' }}" data-checked="{{ checked }}"  bindtap="_handleZanSwitchChange">
          <view class="zan-switch__circle">
            <view hidden="{{ !loading }}" class="zan-switch__loading"></view>
          </view>
          <view class="zan-switch__bg"></view>
        </view>
      </view>
    </view>
  </view>

  <view class="btns">
    <button class="save" bindtap="saveAddress">保存</button>
  </view>
</view>
<!--pages/mine/mine.wxml-->
<view class="container">
  <view class="mydata cen">
    <view class="mydata-top" bindtap="seeInfo">
      <view class="mydata-left">
        <view class="myinfo">
          <view class="myphoto">
            <open-data type="userAvatarUrl" style="width: 160rpx;height: 160rpx;display: block;border-radius:50rpx;"></open-data>
          </view>
          <view class="mysign">
            <view class="myname">
             <open-data type="userNickName" open-gid="xxxxxx"></open-data>
              <image src="../../image/sexm.png"></image>
            </view>
            <text>这是个性签名...........</text>
          </view>
        </view>
      </view>
      <view class="arrow">
        <image src="../../image/arrow.png"></image>
      </view>
    </view>
  </view>
  <view class="mynum">
    <view class="num-item" bindtap='goAtt'>
      <text>99</text>
      <text>关注</text>
    </view>
    <view class="num-item" bindtap='seeFans'>
      <text>99</text>
      <text>粉丝</text>
    </view>
    <view class="num-item" bindtap='seePost'>
      <text>99</text>
      <text>帖子</text>
    </view>

  </view>
  <view class="infolist">
    <view class="infoitem">
      <image src="../../image/zuche.png"></image>
      <text>我的收藏</text>
    </view>
    <view class="infoitem">
      <image src="../../image/zuche.png"></image>
      <text>卡包</text>
    </view>
    <view class="infoitem" bindtap='helpClick'>
      <image src="../../image/zuche.png"></image>
      <text>帮助中心</text>
    </view>
    <view class="infoitem" bindtap="aboutClick">
      <image src="../../image/zuche.png"></image>
      <text>关于我们</text>
    </view>

    
  </view>

</view>
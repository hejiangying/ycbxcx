/* pages/seeorder/seeorder.wxss */
.order-img>image{
  height: 340rpx;
  width: 100%
}
.tour-name{
  width: 96%;
  margin: 0 auto;
  font-size: 28rpx;
  color: #666;
}
.tour-time{
  width: 96%;
  margin: 10rpx auto;
  color: #999;
  font-size: 26rpx;
}
.tour-num{
  width: 96%;
  margin: 0 auto;
   color: #999;
  font-size: 26rpx;
}
.tour-num text{
  margin-right: 50rpx;
  font-size: 26rpx;
}
.tour-price{
  width: 96%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #666;
  font-size: 26rpx;
}
.tour-price .paid{
  color: #999;
}
.order-con>text{
  background-color: #f7f7fa;
  padding: 10rpx;
  width: 100%;
  display: block;
  font-size: 28rpx;
  color: #666;
}
.order-con>view{
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid#f7f7fa;
  font-size: 26rpx;  
}
.order-con>view text{
  width: 20%;
  display: inline-block
}
.order-id{
  border-top: 20rpx solid #f7f7fa;
}
.order-id view {
 font-size: 26rpx;
  color: #666;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f7f7fa;
}
.order-id view text{
  display: inline-block;
}
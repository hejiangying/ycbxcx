/* pages/comments/comments.wxss */
.commsel{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid rgb(233, 231, 231);
}
.commsel view{
  padding-bottom: 20rpx;
}
.commsel view.on{
  color: #f63264;
  border-bottom: 4rpx solid #f63264;
}
.comm-t{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.comm-l {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.comm-l image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.comm-l text{
  font-size: 34rpx;
  color: rgb(109, 107, 107)
}
.comm-r{
  font-size: 30rpx;
  color: #ccc;
}
.commcon{
  width: 96%;
  margin: 0 auto;
  border-bottom: 1rpx solid rgb(233, 231, 231);
  padding: 20rpx 0rpx;
}
.commcon>image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
}
.comm-con{
  font-size:34rpx;
  color: rgb(97, 96, 96)
}
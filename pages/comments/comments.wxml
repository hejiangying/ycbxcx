<!--pages/comments/comments.wxml-->
<view class="container">
  <view class="commsel">
    <view data-comm="1" bindtap='commClick' class="{{comm == 1 ? 'on' : ''}}">全部评论</view>
    <view data-comm="2" bindtap='commClick' class="{{comm == 2 ? 'on' : ''}}">好评</view>
    <view data-comm="3" bindtap='commClick' class="{{comm == 3 ? 'on' : ''}}">中评</view>
    <view data-comm="4" bindtap='commClick' class="{{comm == 4 ? 'on' : ''}}">差评</view>
  </view>
  <!-- 全部评论 -->
  <view class="allcomm" wx:if="{{comm == 1 ? 'on' : ''}}">
    <view class="commcon" wx:for="{{commentlist.allCommentList}}" wx:key="{{index}}">
      <view class="comm-t">
        <view class="comm-l">
          <image src="{{item.thumbImg}}"></image>
          <text>{{item.nickname}}</text>
        </view>
        <view class="comm-r">{{item.createTime}}</view>
      </view>
      <view class="comm-con">{{item.content}}</view>
      <view class="commimg">
      <block wx:for="{{item.imgList}}" wx:key="{{index}}">
        <image src="item"></image>
        </block>
      </view>
    </view>
  </view>

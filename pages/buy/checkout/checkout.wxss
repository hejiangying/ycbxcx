/* pages/shopping/checkout/checkout.wxss */

page {
  height: 100%;
  background: #f4f4f4;
}

.address-box {
  width: 100%;
  background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/address-bg-bd30f2bfeb.png') 0 0 repeat-x;
  background-size: 62.5rpx 10.5rpx;
  margin-bottom: 20rpx;
  padding-top: 10.5rpx;
}

.address-item {
  display: flex;
  background: #fff;
  padding: 35rpx 0 35rpx 32rpx;
}

.address-item.address-empty {
  line-height: 75rpx;
  text-align: center;
}

.address-box .l {
  width: 125rpx;
  height: 100%;
}

.address-box .l .name {
  margin-left: 6.25rpx;
  margin-top: -7.25rpx;
  display: block;
  width: 125rpx;
  height: 43rpx;
  line-height: 43rpx;
  font-size: 29rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.address-box .l .default {
  margin-left: 6.25rpx;
  display: block;
  width: 62rpx;
  height: 33rpx;
  border: 1rpx solid #f63264;
  font-size: 20.5rpx;
  text-align: center;
  line-height: 33rpx;
  color: #f63264;
}

.address-box .m {
  flex: 1;
  height: 72.25rpx;
  color: #999;
  font-size: 32rpx
}

.address-box .mobile {
  display: block;
  height: 29rpx;
  line-height: 29rpx;
  margin-bottom: 6.25rpx;
  font-size: 29rpx;
  color: #333;
}

.address-box .address {
  display: block;
  height: 37.5rpx;
  line-height: 37.5rpx;
  font-size: 25rpx;
  color: #666;
}

.address-box .r {
  width: 77rpx;
  height: 77rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.address-box .r image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}

.arrow {
  display: flex;
  align-items: center;
}

.right-arrow {
  width: 52rpx;
  height: 52rpx;
  margin-right: -20rpx;
}

.zan-item {
  padding: 15px 15px;
}

.order-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.order-box .order-item {
  height: 104.3rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  padding-top: 26rpx;
  border-bottom: 1px solid #d9d9d9;
}

.order-box .order-item .l {
  float: left;
  height: 52rpx;
  width: 50%;
  line-height: 52rpx;
  overflow: hidden;
}

.order-box .order-item .r {
  float: right;
  text-align: right;
  width: 50%;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
}

.order-box .order-item.no-border {
  border-bottom: none;
}

.goods-items {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  margin-bottom: 120rpx;
}

.goods-items .item {
  height: 192rpx;
  display: flex;
  align-items: center;
  margin-left: 32rpx;
  border-bottom: 0.8px solid #ebebeb;
}

.goods-items .item.no-border {
  border-bottom: none;
}

.goods-items .item:last-child {
  border-bottom: none;
}

.goods-items .img {
  height: 150rpx;
  width: 150rpx;
  background-color: #f4f4f4;
  margin-right: 20rpx;
}

.goods-items .img image {
  height: 150rpx;
  width: 150rpx;
}

.goods-items .info {
  flex: 1;
  height: 130rpx;
}
.zan-cell__ft image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}

.goods-items .t {
  height: 33rpx;
  line-height: 33rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #555;
}

.goods-items .t .name {
  display: block;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 450rpx;
}
.zan-cell__bd {
flex:1;
}
.zan-cell {
position:relative;
display:flex;
align-items:center;
line-height:1.4;
font-size:14px;
color:#666;

}


.zan-cell__ft {
position:relative;
text-align:right;
color:#666;
}


.goods-items .t .number {
  display: block;
  float: right;
  text-align: right;
  margin-right: 30rpx;
}

.goods-items .m {
  height: 29rpx;
  overflow: hidden;
  line-height: 29rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #999;
  width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goods-items .b {
  height: 30rpx;
  overflow: hidden;
  line-height: 30rpx;
  font-size: 28rpx;
  color: #555;
  display: inline-block;
}

.goods-items .originPrice {
  height: 30rpx;
  overflow: hidden;
  line-height: 30rpx;
  font-size: 28rpx;
  color: #999;
  display: inline-block;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.order-total {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
}

.order-total .l {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  color: #f63264;
  background: #fff;
  font-size: 30rpx;
  padding-left: 32rpx;
  border-top: 1rpx solid #ebebeb;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.order-total .r {
  width: 233rpx;
  height: 100rpx;
  background: #f63264;
  border: 1px solid #f63264;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}

.order-total .r.active {
  background: #fc0240;
}

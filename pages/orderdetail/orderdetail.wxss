/* pages/orderdetail/orderdetail.wxss */
.sell-state{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.tourdetail image{
  height: 360rpx;
  width: 100%;
}
/* .sell-state{
  margin: 20rpx !important;
} */
.sell-state .t-money{
  color: #f63264;
}
.sell-state .t-money{
  font-size: 28rpx;
}
.sell-state .t-money .t-much{
  font-size: 30rpx;
}
.sell-state .t-money .t-min,.sell-state .t-money text:last-child{
  color: #f63264;
}
.sell-state .sold{
  font-size: 26rpx;
  color:  rgb(114, 109, 109);
}
.advantages{
  display: flex;
  flex-direction: row;
}
.advantages view{
  font-size: 26rpx;
  margin-right: 30rpx;
  color: rgb(114, 109, 109);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.advantages image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}
.cen{
  width: 96%;
  margin: 20rpx auto;
}
.t-name{
  color: #666;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.kong{
  height: 10rpx;
  background-color: #f7f7fa;
}
.score,.time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.score{
  font-size: 36rpx;
  padding-bottom: 10rpx;
}
.time{
  padding: 20rpx 0rpx;
  color: #999;
  font-size: 26rpx;
}
.satisfaction{
  color: #f63264;
  font-size: 26rpx;
}
.comments{
  padding: 20rpx 0rpx;
}
.comments-con{
  font-size: 26rpx;
  color: #999;
}
.satisfaction text:nth-child(1){
  font-size:26rpx;
}
.score .com-num{
  color:#999;
  font-size: 26rpx;
}
/* .tab-con{
  border-bottom: 1px solid #dbdad8;
} */
.tab{
  z-index: 100
}
.tab .tab-top{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1px solid #f0efed;
}
.tab .tab-top text{
  padding: 20rpx;
  font-size:28rpx;
  color: #666;
}
.tab .tab-con>view{
  font-size: 26rpx;
  text-indent: 70rpx;
  width: 96%;
  margin: 0 auto;
  line-height: 52rpx;
  padding-bottom: 100rpx;
  color: #999;
}
.tab .tab-top text.xcon{
  color: #f63264;
  border-bottom: 2px solid #f63264;
}
.footbtn{
  position: fixed;
  width: 100%;
  border-top: 1rpx solid #f5f5f5;
  height: 100rpx;
  bottom: 0;
  z-index: 999;
  background: #fff;
}
.footbtn view.scbtn{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #ccc;
  float: left;
  margin-top: 10rpx;
}
.footbtn view.scbtn image{
  width: 40rpx;
  height: 40rpx;
}
.footbtn view.buybtn{
  width: 80%;
  display: inline-block;
  background-color: #f63264;
  color: #fff;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
} 
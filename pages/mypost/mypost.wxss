/* pages/mypost/mypost.wxss */
.post-item{
  width: 96%;
  margin:0 auto;
  border-bottom: 1px solid #ebecee;
}
.post-item .post-time{
  font-size: 30rpx;
  color: #b0b1b2;
  margin-top: 10rpx;
}
.post-item .post-con{
  font-size: 34rpx;
  color: #000;
}
.post-item .post-photo {
  display: flex;
  flex-direction: row;
  justify-content: space-around
}
.post-item .post-photo image{
  width: 32%;
  display: block;
  height: 160rpx;
}
.post-operation {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.post-operation .oper-l text{
  font-size: 30rpx;
  border: 1px solid #b0b1b2;
  border-radius: 10rpx;
  padding:8rpx 10rpx;
  margin-right: 30rpx;
  color: #b0b1b2;
}
.oper-r{
  width: 40%;
}
.oper-r {
  width:60%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.oper-r view {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.oper-r view image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.oper-r view text{
  font-size: 30rpx;
  color: #b0b1b2
}
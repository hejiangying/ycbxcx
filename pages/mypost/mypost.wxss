/* pages/mypost/mypost.wxss */
.post-item{
  width: 96%;
  margin:0 auto;
  border: 1px solid #eee;
  box-sizing: border-box;
  padding: 10rpx;
  margin-bottom: 20rpx;
}
.post-item .post-time{
  font-size: 26rpx;
  color: #999;
  margin: 10rpx;
}
.post-item .post-con{
  font-size: 28rpx;
  color: #666;
  margin: 10rpx;
  word-break:break-all;
}
.post-item .post-photo {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 320px;
  margin: 0 auto;
}
.post-item .post-photo image{
  width: 200rpx;
  display: block;
  height: 200rpx;
  border: 1rpx solid #eee;
  border-radius: 5rpx;
  margin: 5rpx;
}
.post-operation {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.post-operation .oper-l text{
  font-size: 26rpx;
  border: 1px solid #999;
  border-radius: 10rpx;
  padding:5rpx 10rpx;
  margin-right: 30rpx;
  color: #999;
}
.oper-r{
  width: 70%;
}
.oper-r {
  width:30%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.oper-r view {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.oper-r view image{
  width:34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.oper-r view text{
  font-size: 26rpx;
  color: #999;
}